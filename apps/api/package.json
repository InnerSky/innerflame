    "@trpc/server": "^11.0.0-rc.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.19.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.20",
    "@types/node": "^22.7.3",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.5.3"
