{
  "name": "innerflame",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@10.10.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:all": "./scripts/start-dev.sh",
    "dev:fresh": "./scripts/start-dev.sh --reset",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "reset-dev": "./scripts/clear-dev-servers.sh",
    "prepare": "husky",
    "gen:types": "npx supabase gen types typescript --project-id lpxnyybizytwcqdqasll > packages/types/src/supabase.ts"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.11.1",
    "eslint": "^9.11.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.2.5",
    "supabase": "^2.20.3",
    "turbo": "^2.2.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/supabase-js": "^2.49.3",
    "dotenv": "^16.4.7",
    "react-helmet-async": "^2.0.5",
    "remark-breaks": "^4.0.0"
  }
}
