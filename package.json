{
  "name": "innerflame",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "npm@10.2.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:all": "./scripts/start-dev.sh",
    "dev:fresh": "./scripts/start-dev.sh --reset",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "reset-dev": "./scripts/clear-dev-servers.sh",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "eslint": "^9.11.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.2.5",
    "turbo": "^2.2.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
